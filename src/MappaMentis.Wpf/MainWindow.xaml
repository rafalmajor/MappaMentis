<Window x:Class="MappaMentis.Wpf.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MappaMentis.Wpf"
        xmlns:vm="clr-namespace:MappaMentis.Wpf.ViewModels"
        xmlns:views="clr-namespace:MappaMentis.Wpf.Views"
        mc:Ignorable="d"
        Title="MappaMentis" 
        Height="600" 
        Width="1000"
        WindowStartupLocation="CenterScreen">
    <Window.DataContext>
        <local:MainWindowViewModel/>
    </Window.DataContext>
    <ContentControl Content="{Binding CurrentView}">
        <ContentControl.Resources>
            <DataTemplate DataType="{x:Type vm:WelcomeViewModel}">
                <views:WelcomeView />
            </DataTemplate>
            <DataTemplate DataType="{x:Type vm:DashboardViewModel}">
                <views:DashboardView />
            </DataTemplate>
            <DataTemplate DataType="{x:Type vm:MindMapViewModel}">
                <views:MindMapView />
            </DataTemplate>
        </ContentControl.Resources>
    </ContentControl>
</Window>
